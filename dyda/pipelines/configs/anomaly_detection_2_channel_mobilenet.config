{
    "trigger_level": "L3",
    "dyda_config": "/etc/dyda/trainer.config",
    "pipeline_def": [
        {
            "name": "frame_reader",
            "component": "data_reader",
            "class": "BinaryDataReader",
            "type": "normal",
            "input_type": "use_external_data",
            "output_type": "output_data",
            "force_snapshotable": true
        },
        {
            "name": "meta_reader",
            "component": "data_reader",
            "class": "MultiChannelDataReader",
            "type": "normal",
            "input_type": "use_previous_output",
            "output_type": "results",
            "force_snapshotable": true
        },
        {
            "name": "img_queue_updater",
            "component": "data_reader",
            "class": "MultiChannelUpdateReader",
            "type": "normal",
            "input_type": "append",
            "output_type": "output_data",
            "snapshot": false,
            "additional_info": {"input_data": [
                ["meta_reader", "results"],
                ["frame_reader", "output_data"]
            ]},
            "dyda_config": {
                "channel_num": 2
            }
        },
        {
            "name": "bg_subtractor",
            "component": "image_processor",
            "class": "BgSubtractImageProcessor",
            "type": "normal",
            "input_type": "use",
            "output_type": "output_data",
            "snapshot": false,
            "additional_info": {"input_data": [
                ["img_queue_updater", "output_data"]
            ]},
            "dyda_config": {
                "history": 100,
                "var_threshold": 25,
                "detect_shadows": true,
                "learning_rate": -1,
                "channel_num": 2,
                "rotate_input": true
            }
        },
        {
            "name": "img_selector",
            "component": "image_processor",
            "class": "SelectByIdImageProcessor",
            "type": "normal",
            "input_type": "append",
            "output_type": "output_data",
            "snapshot": false,
            "additional_info": {"input_data": [
                ["meta_reader", "results"],
                ["bg_subtractor", "output_data"]
            ]}
        },
        {
            "name": "open_processor",
            "component": "image_processor",
            "class": "MorphOpenImageProcessor",
            "type": "normal",
            "input_type": "use_previous_output",
            "output_type": "output_data",
            "snapshot": false,
            "dyda_config": {
                "kernel_size": 3,
                "iter_number": 1
            }
        },
        {
            "name": "close_processor",
            "component": "image_processor",
            "class": "MorphCloseImageProcessor",
            "type": "normal",
            "input_type": "use_previous_output",
            "output_type": "output_data",
            "snapshot": false,
            "dyda_config": {
                "kernel_size": 5,
                "iter_number": 3
            }
        },
        {
            "name": "ccl_processor",
            "component": "image_processor",
            "class": "CCLImageProcessor",
            "type": "normal",
            "output_type": "results",
            "snapshot": false,
            "input_type": "use_previous_output",
            "dyda_config": {
                "connectivity": 4,
                "area_min_thre": 0.0005,
                "area_max_thre": 0.3,
                "label": "anomaly"
            }
        },
        {
            "name": "roi_determinator",
            "component": "determinator",
            "class": "DeterminatorByRoi",
            "type": "normal",
            "output_type": "results",
            "snapshot": false,
            "input_type": "use_previous_results",
            "dyda_config": {
                "use_external_meta": true
            }
        },
        {
            "name": "object_sorter",
            "component": "determinator",
            "class": "DeterminatorSortByArea",
            "type": "normal",
            "input_type": "use_previous_results",
            "output_type": "results",
            "snapshot": false,
            "dyda_config": {
                "mode": "large",
                "number": 1
            }
        },
        {
            "name": "square_extender",
            "component": "box_processor",
            "class": "SquareExtendBoxProcessor",
            "type": "normal",
            "input_type": "use_previous_results",
            "output_type": "results",
            "snapshot": false
        },
        {
            "name": "crop_processor",
            "component": "image_processor",
            "class": "CropUseAnnoImageProcessor",
            "type": "normal",
            "input_type": "append",
            "output_type": "output_data",
            "snapshot": false,
            "additional_info": {"input_data": [
                ["frame_reader", "output_data"],
                ["square_extender", "results"]
            ]}
        },
        {
            "name": "classifier",
            "component": "classifier",
            "class": "ClassifierMobileNet",
            "type": "normal",
            "input_type": "extend",
            "output_type": "results",
            "snapshot": false,
            "additional_info": {"input_data": [
                ["crop_processor", "output_data"]
            ]},
            "dyda_config":{
                "model_file": "/home/shared/model_zoo/mobile_net/dyda_test_model/output_graph.pb",
                "label_file": "/home/shared/model_zoo/mobile_net/dyda_test_model//output_labels.txt",
                "input_height": 224,
                "input_width": 224,
                "input_mean": 128,
                "input_std": 128,
                "input_layer": "input",
                "convert_to_rgb": true,
                "output_layer": "final_result",
                "ftype": "jpg",
                "gpu_options": {
                    "allow_growth": true,
                    "visible_device_list": "0",
                    "per_process_gpu_memory_fraction": 0.3
                }
            }
        },
        {
            "name": "detcla_combiner",
            "component": "output_generator",
            "class": "OutputGeneratorCombineDetCla",
            "type": "normal",
            "input_type": "append",
            "output_type": "results",
            "snapshot": false,
            "additional_info": {"input_data": [
                ["object_sorter", "results"],
                ["classifier", "results"]
            ]}
        },
        {
            "name": "image_processor",
            "component": "image_processor",
            "class": "PatchImageProcessor",
            "type": "skip",
            "input_type": "append",
            "output_type": "output_data",
            "snapshot": true,
            "additional_info": {"input_data": [
                ["frame_reader", "output_data"],
                ["detcla_combiner", "results"]
            ]},
            "dyda_config": {
                "patch_color": [0, 0, 255],
                "patch_line_width": 6,
                "text_space": -5,
                "font_scale": 1,
                "key_to_patch": ["label"]
            }
        },
        {
            "name": "output_generator",
            "component": "pipeline_comp",
            "class": "OutputGeneratorFromMeta",
            "type": "output_generator",
            "input_type": "use_meta_pairs",
            "output_type": "results",
            "force_snapshotable": true,
            "additional_info": {"comp_key_pairs": [
                ["detcla_combiner", "folder"],
                ["detcla_combiner", "filename"],
                ["detcla_combiner", "size"],
                ["detcla_combiner", "annotations", ["type", "label", "confidence", "top", "bottom", "left", "right", "id"]]
            ]}
        }
    ]
}
